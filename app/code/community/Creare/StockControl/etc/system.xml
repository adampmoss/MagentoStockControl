<?xml version = "1.0" encoding = "UTF-8" ?>
<config>
    <sections>
        <cataloginventory translate="label" module="stockcontrol">
            <groups>
                <stockcontrol>
                    <label>Admin Stock Management</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                    <fields>
                        <change_status translate="label">
                            <label>Auto Update Stock Status When Qty is Changed?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </change_status>
                        <sort_by translate="label">
                            <label>Default Sort By</label>
                            <frontend_type>select</frontend_type>
                            <source_model>stockcontrol/source_sort</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sort_by>
                        <order translate="label">
                            <label>Order</label>
                            <frontend_type>select</frontend_type>
                            <source_model>stockcontrol/source_order</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order>
                    </fields>
                </stockcontrol>
            </groups>
        </cataloginventory>
    </sections>
</config>